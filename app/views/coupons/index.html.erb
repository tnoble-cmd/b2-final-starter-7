<%= render partial: "shared/nav" %>

<h1>Coupons</h1>

<h3> Active Coupons </h3>
<div id = "index-coupons">
    <% @coupons.active_coupons.each do |coupon| %>
        <div id = "coupon">
            Coupon: <%=link_to coupon.name, merchant_coupon_path(@merchant, coupon) %>
            Ammount Off: <%= coupon.discount %>
        </div>
    <% end %>
</div>

<h3> Inactive Coupons </h3>
<div id = "index-coupons-inactive">
    <% @coupons.inactive_coupons.each do |coupon| %>
        <div id = "coupon-inactive">
            Coupon: <%=link_to coupon.name, merchant_coupon_path(@merchant, coupon) %>
            Ammount Off: <%= coupon.discount %>
        </div>
    <% end %>
</div>

<div id = "new-coupon">
    <%= link_to "Create New Coupon", new_merchant_coupon_path(@merchant) %>
</div>