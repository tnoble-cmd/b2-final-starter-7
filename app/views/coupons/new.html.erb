

<%= render partial: "shared/nav" %>

<h1>Create a New Coupon</h1>

<% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
<% end %>

<%= form_with model: [@merchant, @coupon], local: true do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %><br>

    <%= form.label :code %>
    <%= form.text_field :code %><br>

    <%= form.label :discount %>
    <%= form.number_field :discount %><br>

    <%= form.label :discount_type %>
    <%= form.select :discount_type, ["percent", "dollar"] %><br>

    <%= form.label :status %>
    <%= form.select :status, Coupon.statuses.keys.map { |status| [status.humanize, status]}%><br>

    <%= form.submit "Submit" %>

<% end %>

